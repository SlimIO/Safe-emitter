{
  "name": "@slimio/safe-emitter",
  "version": "1.1.0",
  "description": "Safe and isolated Event Emitter with Asynchronous capabilities",
  "main": "index.js",
  "scripts": {
    "prepublishOnly": "pkg-ok",
    "test": "cross-env psp && nyc --reporter=lcov ava --verbose",
    "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
    "coverage": "codecov",
    "report": "nyc report --reporter=html"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-push": "cross-env eslint index.js && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SlimIO/safeEmitter.git"
  },
  "keywords": [
    "emitter",
    "safe",
    "event"
  ],
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "author": "SlimIO",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SlimIO/safeEmitter/issues"
  },
  "homepage": "https://github.com/SlimIO/safeEmitter#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@escommunity/minami": "^1.0.0",
    "@slimio/eslint-config": "^4.1.0",
    "@slimio/psp": "^0.11.1",
    "ava": "^3.8.2",
    "codecov": "^3.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "jsdoc": "^3.6.4",
    "nyc": "^15.0.1",
    "pkg-ok": "^2.3.1"
  },
  "dependencies": {}
}
